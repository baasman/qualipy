{% extends "base.j2" %}

{% block content %}

    {% import 'util.j2' as util %}

    <h1>{{ comparison_name }}</h2>
    <h3> Comparison </h3>

    <h3>Numerical Trend Comparison</h3>
    <button class="btn btn-primary" type="button" data-toggle="collapse" 
        data-target=".numerical" aria-expanded="true" aria-controls=".numerical">
        View Numerical Trend Comparisons
    </button>
    <div class='numerical show'>
        {% for plot in num_plots %}
        {{ util.plot_chart(plot) }}
        {% endfor %}
    </div>

    <h3>Categorical Trend Comparison</h3>
    <button class="btn btn-primary" type="button" data-toggle="collapse" 
        data-target=".categorical" aria-expanded="true" aria-controls=".categorical">
        View Categorical Trend Comparisons
    </button>
    <div class='categorical show'>
        {% for plot in cat_plots %}
        {{ util.plot_chart(plot) }}
        {% endfor %}
    </div>

{% endblock %}